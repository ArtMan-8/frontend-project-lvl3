{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  "plugins": ["jest", "testing-library", "babel"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2015
  },
  "parser": "babel-eslint",
  "rules": {
    "no-console": "error",
    "no-param-reassign": "off",
    "no-unused-vars": "off",
    "max-len": "off",
    "arrow-parens": ["error", "always"],
    "prettier/prettier": "off"
  }
}
